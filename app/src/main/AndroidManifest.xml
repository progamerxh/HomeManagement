<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tkgd.homemanagement">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/home_plus"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity android:name=".Activity.ScenarioActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.RoomActivity" />
        <activity android:name=".Activity.NotificationActivity" />
        <activity android:name=".Activity.NewScenarioActivity" />
        <activity android:name=".Activity.NewRoomActivity" />
        <activity android:name=".Activity.NewDeviceActivity" />
        <activity android:name=".Activity.DeviceActivity" />
        <activity android:name=".Activity.ProfileActivity"></activity>
    </application>

</manifest>